<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

<p id="notice"><%= notice %></p>

<h1>ブログ一覧</h1>
    <% @blogs.each do |blog| %>
      <div class="row">
      <p>タイトル: <%= blog.title %></p>
      <p>コンテンツ: <%= blog.content %></p>
      <p>ユーザー: <%= blog.user.name %></p>
        <%= link_to '詳しく見る', blog , class: 'btn btn-default'%>
        <%= link_to '編集', edit_blog_path(blog) , class: 'btn btn-default' %>
        <%= link_to '削除', blog, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-default'%>
      </div>
    <% end %>

<br>



<%= link_to '新しくブログを作る', new_blog_path , class: 'btn btn-default'%>
<%= link_to 'サインイン', new_user_session_path, class: 'btn btn-default' %>
<%= link_to 'サインアップ', new_user_registration_path, class: 'btn btn-default' %>
<%= link_to 'サインアウト', destroy_user_session_path, method: :delete , class: 'btn btn-default'%>

</div>
</div>